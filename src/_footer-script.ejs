<!-- background-imageでwebpファイルを使うためにJSで判定-->
<script defer type="text/javascript" src="<%= meta.scriptPath %>vendors/modernizr-webp.js"></script>

<!-- スマホのスムーススクロール用Polyfill -->
<script defer src="https://polyfill.io/v3/polyfill.min.js?features=smoothscroll"></script>

<!-- 共通で読み込む -->
<script src="<%= meta.scriptPath %>vendors.bundle.js"></script>
<script src="<%= meta.scriptPath %>index.bundle.js"></script>

<!-- トップページとPerson個別ページで読み込む(rellax) -->
<% if(meta.isPerson || meta.isTop) { %>
<script type="text/javascript" src="<%= meta.scriptPath %>vendors/rellax.min.js"></script>
<!-- // [①,②,③]...①以上がmobile,②以上がtablet,③以上がdesktop -->
<script>
let rellax=new Rellax(".rellax",{breakpoints:[320,960,1366],center:true});
</script>
<% } %>

<!-- 数字で見るページで読み込む(グラフとカウントアップ) -->
<% if(meta.isFigures) { %>
<script src="<%= meta.scriptPath %>vendors/chart.min.js"></script>
<script src="<%= meta.scriptPath %>figures.bundle.js"></script>
<% } %>